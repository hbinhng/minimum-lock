{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["./dist", "**/*.spec.ts"]
}
